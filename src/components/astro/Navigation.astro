---
import Handshake from "../../icons/handshake.svg";
const siteName = "SuperStore";
const navItems = [
  {
    label: siteName,
    routeTo: "/",
    icon: Handshake,
  },
  {
    label: "Shop",
    routeTo: "/shop",
  },
];
---

<nav class="p-10 bg-green-200">
  <ul class="flex flex-row gap-10 justify-center">
    {
      navItems.map((item) => (
        <li>
          <a
            href={item.routeTo}
            class="text-2xl flex flex-row gap-2 items-center"
          >
            {item.icon ? <item.icon width={32} height={32} /> : undefined}
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
